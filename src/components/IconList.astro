---
const icons = await Astro.glob("/icons/*.svg");
---

<h2 class="text-xl font-bold mb-2">All icons ({icons.length})</h2>

<section class="grid grid-cols-6 gap-1 md:grid-cols-12">
  {
    icons.map((icon) => {
      return (
        <a href={icon.default.src}>
          <img
            src={icon.default.src}
            alt="Android"
            loading="lazy"
            class="w-16 h-16"
          />
        </a>
      );
    })
  }
</section>
